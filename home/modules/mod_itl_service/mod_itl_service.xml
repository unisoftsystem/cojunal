<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
  <name>ITL Service</name>
  <author>iThemesLab</author>
  <creationDate>Jan 2015</creationDate>
  <copyright>Copyright (C) 2013 - 2015 iThemesLab.com. All rights reserved.</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL or Later</license>
  <authorEmail>ithemeslab@gmail.com</authorEmail>
  <authorUrl>www.ithemeslab.com</authorUrl>
  <version>1.0</version>
  <description>ITL Service</description>
  <files>
    <filename>mod_itl_service.xml</filename>
    <filename module="mod_itl_service">mod_itl_service.php</filename>
    <filename>tmpl/default.php</filename>
    <filename>tmpl/basic.php</filename>
    <filename>tmpl/mini.php</filename>
    <folder>tmpl/</folder>
  </files>
  <config>
    <fields name="params">
      <fieldset name="basic">

      <!--Service 1-->
      <field name="service1_spacer" type="spacer" label="Service 1" />
      <field name="icon1" type="icon" label="Icon Name" filter="raw" description="Service Icon" />
      <field name="title1" type="text" label="Title" description="Service Title" />
      <field name="desc1" type="textarea" rows="5" cols="40" label="Desc" description="Service Description" />
      <field name="more1" type="text" label="Link" description="Readmore Link" />
      <field name="service1_hr" type="spacer" hr="true" />

      <!--Service 2-->
      <field name="service2_spacer" type="spacer" label="Service 2" />
      <field name="icon2" type="icon" label="Icon Name" filter="raw" description="Service Icon" />
      <field name="title2" type="text" label="Title" description="Service Title" />
      <field name="desc2" type="textarea" rows="5" cols="40" label="Desc" description="Service Description" />
      <field name="more2" type="text" label="Link" description="Readmore Link" />
      <field name="service2_hr" type="spacer" hr="true" />

      <!--Service 3-->
      <field name="service3_spacer" type="spacer" label="Service 3" />
      <field name="icon3" type="icon" label="Icon Name" filter="raw" description="Service Icon" />
      <field name="title3" type="text" label="Title" description="Service Title" />
      <field name="desc3" type="textarea" rows="5" cols="40" label="Desc" description="Service Description" />
      <field name="more3" type="text" label="Link" description="Readmore Link" />
      <field name="service3_hr" type="spacer" hr="true" />

      <!--Service 4-->
      <field name="service4_spacer" type="spacer" label="Service 4" />
      <field name="icon4" type="icon" label="Icon Name" filter="raw" description="Service Icon" />
      <field name="title4" type="text" label="Title" description="Service Title" />
      <field name="desc4" type="textarea" rows="5" cols="40" label="Desc" description="Service Description" />
      <field name="more4" type="text" label="Link" description="Readmore Link" />
      <field name="service4_hr" type="spacer" hr="true" />


      </fieldset>
      <fieldset name="advanced">
        <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" /> 
        <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
        <field name="module_cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
          <option value="1">JGLOBAL_USE_GLOBAL</option>
          <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
        </field>
        <field name="cache" type="hidden" default="1" />
        <field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
        <field name="cachemode" type="hidden" default="itemid">
         <option value="itemid"></option>
       </field>
     </fieldset>
   </fields>
 </config>
</extension>